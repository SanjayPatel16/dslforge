<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.presentationFactories">
      <factory
            class="org.dslforge.workbench.theme.business.BusinessPresentationFactory"
            id="org.eclipse.rap.design.example.business.factory"
            name="Business Presentation Factory">
      </factory>
   </extension>
   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            favicon="img/business/dslforge.png"
            id="org.eclipse.rap.design.example.business.branding"
            themeId="org.eclipse.rap.design.example.business.theme"
            title="DSLFORGE Modeling Workbench">
         <presentationFactory
               defaultLayoutId="org.eclipse.rap.design.example.business.layout"
               id="org.eclipse.rap.design.example.business.factory"
               name="Business Presentation Factory"
               viewActionsVisible="false">
            <defaultStackPresentation
                  id="org.eclipse.rap.design.example.stack.view">
            </defaultStackPresentation>
         </presentationFactory>
      </branding>
   </extension>
   <extension
         point="org.eclipse.rap.ui.layouts">
      <layout
            id="org.eclipse.rap.design.example.business.layout"
            name="Business Layout Blue">
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.LogoInitializer"
               id="org.eclipse.rap.design.example.layoutset.logo"
               name="Logo">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.HeaderInitializer"
               id="org.eclipse.rap.design.example.layoutset.header"
               name="Header">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.FooterInitializer"
               id="org.eclipse.rap.design.example.layoutset.footer"
               name="Footer">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.MenuBarInitializer"
               id="org.eclipse.rap.design.example.layoutset.menubar"
               name="MenuBar">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.PerspectiveSwitcherInitializer"
               id="org.eclipse.rap.design.example.layoutset.perspective"
               name="Perspective Switcher">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.StackInitializer"
               id="org.eclipse.rap.design.example.layoutset.stack"
               name="Business Stack">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.ConfigDialogInitializer"
               id="org.eclipse.rap.design.example.layoutset.confdialog"
               name="Config Dialog">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.CoolbarInitializer"
               id="org.eclipse.rap.design.example.layoutset.coolbar"
               name="Coolbar">
         </layoutSet>
         <layoutSet
               class="org.dslforge.workbench.theme.business.layoutsets.CoolbarOverflowInitializer"
               id="org.eclipse.rap.design.example.layoutset.coolbaroverflow"
               name="Coolbar Overflow">
         </layoutSet>
      </layout>
   </extension>
   <extension
         point="org.eclipse.rap.ui.themes">
      <theme
            file="theme/business/business.css"
            id="org.eclipse.rap.design.example.business.theme"
            name="Business Theme">
      </theme>
   </extension>
   <extension
         point="org.eclipse.rap.ui.stackPresentations">
      <stackPresentation
            actionClass="org.dslforge.workbench.theme.stacks.ConfigAction"
            class="org.dslforge.workbench.theme.stacks.ViewStackPresentation"
            id="org.eclipse.rap.design.example.stack.view"
            name="Example Stack Presentation"
            type="view">
      </stackPresentation>
   </extension>

</plugin>
